# Bethesda Shelter Agent - Environment Variables
# Copy this to .env and fill in your values

# ===================
# DATABASE (SQLite)
# ===================
DATABASE_PATH=bethesda_shelter.db

# ===================
# TWILIO (Voice/SMS)
# ===================
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===================
# OPENAI (LLM + Speech)
# ===================
OPENAI_API_KEY=sk-your-api-key-here

# ===================
# CHROMADB (RAG Vector DB - In-Memory)
# ===================
# Leave empty for in-memory, or set path for persistent storage
CHROMADB_PERSIST_PATH=

# ===================
# APP SETTINGS
# ===================
APP_ENV=development
DEBUG=true
SECRET_KEY=generate_a_secure_random_key_here

# ===================
# SHELTER CONFIG
# ===================
TOTAL_BEDS=108
RESERVATION_HOLD_HOURS=3
RESERVATION_EXPIRE_CHECK_MINUTES=5

# ===================
# LIVEKIT (Voice Agent)
# ===================
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your_api_key
LIVEKIT_API_SECRET=your_api_secret
